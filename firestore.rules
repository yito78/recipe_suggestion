rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if
          request.time < timestamp.date(2023, 6, 10);
    }
    match /recipes/{document=**} {
      allow write, update: if request.resource.data.category == get(/databases/$(database)/documents/categories/$(request.resource.data.category_id)).data.category_id;
    }
  }
}